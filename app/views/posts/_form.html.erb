
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.association :categories, input_html: {class: "chosen-select"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

  <!-- # TODO add the add tagging here  chosen? maybe, try-->
<% end %>
