
<%= link_to 'New Post', new_post_path %>

<h1>Listing Posts </h1>

<table class="table-striped ">
	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 text-left">
  <thead>
    <tr>
      <th>Post</th>
      <th>By:</th>
    </tr>
  </thead>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= link_to post.user.full_name, post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
	<div>
</table>

<br>
