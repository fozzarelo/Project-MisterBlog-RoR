<% if can? :like, @post  %>
	<% if @post.liked_by(current_user) %>
	  <%= link_to "Un-Like", post_like_path(@post, user_like), method: :delete, remote: true %>
	<% else %>
	  <%= link_to "Like", post_likes_path(@post), method: :post, remote: true %>
	<% end %>
<% else %>
	Likes:
<% end %>
(<%= @post.likes.count %>)
